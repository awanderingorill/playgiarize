<!DOCTYPE html>
<html>
<head>
  <title>Playgiarize</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "http://netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.css", :media => 'all' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="wrapper">
    <div class="row header-container">
      <div class="col-md-6">
        <a href="/" class="logo"><h1><i class="fa fa-copy"></i> PLAYGIARIZE</h1></a>
      </div>
      <div class="col-md-6">
        <nav align="right" class="login-links">
          <% if session[:user_id] %>
          <% @user = User.find(session[:user_id]) %>
          <h3>logged in as <%= link_to("#{@user.username}", "/users/#{@user.id}") %> | <%= link_to('Log out', '/logout') %></h3>
          <% else %>
          <h3><%= link_to('Log in', '/login') %> | <%= link_to('Sign up', '/users/new') %></h3>
          <% end %>
        </nav>
      </div>
    </div>
    <div class="row">
      <%= yield %>
    </div>
  </div>
</body>
</html>
