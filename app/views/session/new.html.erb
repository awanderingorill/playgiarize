<h2>Log in</h2>

<%= form_tag('/login') do %>
  <%= text_field_tag :username, nil, :placeholder => 'Username', :class => 'small-placeholder' %><br>
  <%= password_field_tag :password, nil, :placeholder => 'Password', :class => 'small-placeholder' %><br>
  <%= submit_tag "Log in", class: 'btn btn-secondary', style: 'margin-top: 25px;' %>
<% end %>